<h1 class="top_h1"><%= page_title %></h1>
<div class="row">
  <div class="small-12 large-12 columns">

    <table style="width: 100%;">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Enabled</th>
          <th class="text-center" colspan="2">Actions</th>
        </tr>
      </thead>
    
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.enabled %></td>
            <td><%= link_to 'Edit', edit_admin_user_path(user), class: "button" %></td>
            <td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    <%= link_to 'New User', new_admin_user_path, class:"button" %> 
  </div>
</div>