<h1 class="top_h1"><%= page_title %></h1>
<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th>Memo</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @messages.each do |message| %>
          <tr>
            <td><%= message.name %></td>
            <td><%= message.email %></td>
            <td><%= message.subject %></td>
            <td><%= message.memo %></td>
            <td><%= link_to 'Edit', edit_admin_message_path(message), class:"button" %></td>
            <td><%= link_to 'Delete', admin_message_path(message), method: :delete, data: { confirm: 'Are you sure?' }, class:"button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    <%= link_to 'New Message', new_admin_message_path, class:"button" %>
  </div>
</div>