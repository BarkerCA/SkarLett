<h1 class="top_h1"><%= page_title %></h1>
<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Time</th>
          <th>Address</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= event.date %></td>
            <td><%= event.time %></td>
            <td><%= event.address %></td>
            <td><%= link_to 'Edit', edit_admin_event_path(event), class:"button" %></td>
            <td><%= link_to 'Destroy', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class:"button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    <%= link_to 'New Event', new_admin_event_path, class:"button" %>
  </div>
</div>