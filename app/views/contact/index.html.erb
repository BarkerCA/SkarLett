<h1 class="top_h1"><%= page_title %></h1>
<div class="row">
  <div class="small-12 large-12 columns">
    <%= form_for @message, url: {action: "create"} do |f| %>
      <% if @message.errors.any? %>
        <div class="error_messages">
          <h3>Please correct the errors below.</h3>
          <ul>
            <% for message in @message.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <% if @msg %>
      <div class="error_messages">
        <h3>Please correct the errors below.</h3>
        <ul>
          <li><%= @msg %></li>
        </ul>
      </div>
      <% end %>
  </div>
</div>
<div class="row">
  <div class="small-12 large-12 columns">
    <div class="row collapse prefix-radius">
      <div class="small-3 columns">
        <span class="prefix">Name</span>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :name %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="small-12 large-12 columns">
    <div class="row collapse prefix-radius">
      <div class="small-3 columns">
        <span class="prefix">Email</span>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :email %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="small-12 large-12 columns">
    <div class="row collapse prefix-radius">
      <div class="small-3 columns">
        <span class="prefix">Subject</span>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :subject %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="small-12 large-12 columns">
    <%= f.text_area :memo %>
  </div>
</div>
<div class="row">
  <div class="small-12 large-12 columns">
    <label>What is the color of the word <span class="sk-red_dark">SkarLett</span> at the top of the screen?
      <span data-tooltip aria-haspopup="true" class="has-tip" title="We use this question to try to make sure the contact form is being submitted by a person.">Why do we ask this?</span>
      <input name="challenge" type="text">
    </label>
  </div>
</div>
<div class="row">
  <div class="small-12 large-12 columns">
    <p><%= f.submit :value=>"Contact Us", :class=>"button" %></p>
  </div>
</div>
<% end %>